{
	// Place your snippets for php here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

  // https://github.com/Microsoft/vscode/blob/master/extensions/php/snippets/php.snippets.json

	"php_expand_tag_inline": {
		"prefix": "<?php",
		"body": [
			"<?php $1 ?>"
		],
		"description": "* Expand PHP Tag inline",
	},

	"php_expand_tag_multiline": {
		"prefix": "<?php",
		"body": [
			"<?php ",
			"",
			"\t$1",
			"",
			"?>"
		],
		"description": "* Expand PHP Tag multiline"
	},

	"Etiqueta php": {
		"prefix": "phpecho",
		"body": "<?php echo \\$${1:variable}; ?>"
	},	

	"php_close_block": {
		"prefix": "phpend",
		"body": ["<?php } ?>"],
		"description": "* Close PHP block",
	},

	"php_var_dump": {
		"prefix": "var_dump",
		"body": ["echo '<pre>'; var_dump($1); echo '</pre>';"],
		"description": "* var_dump"
	},







	"define(…, …)": {
		"prefix": "def",
		"body": [
			"define('$1', ${2:'$3'});",
			"$0"
		],
		"description": "* Definition"
	},

	"if …": {
		"prefix": "if",
		"body": [
			"if (${1:condition}) {",
			"\t${0:# code...}",
			"}"
		],
		"description": "* If block"
	},

	"if … else …": {
		"prefix": "ifelse",
		"body": [
			"if (${1:condition}) {",
			"\t${2:# code...}",
			"} else {",
			"\t${3:# code...}",
			"}",
			"$0"
		],
		"description": "* If Else block"
	},

	"while …": {
		"prefix": "while",
		"body": [
			"while (${1:$${2:a} <= ${3:10}}) {",
			"\t${0:# code...}",
			"}"
		],
		"description": "* While-loop"
	},

	"foreach …": {
		"prefix": "foreach",
		"body": [
			"foreach ($${1:variable} as $${2:key} ${3:=> $${4:value}}) {",
			"\t${0:# code...}",
			"}"
		],
		"description": "* Foreach loop"
	}
}
